<% if (success && success.length) {%>
    <div class="alert alert-success alert-dismissible fade show" style="margin-left: 250px;" role="alert">
        <%= success %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
<% } %>
    
    <% if (error && error.length) {%> 
    <div class="alert alert-danger alert-dismissible fade show" style="margin-left: 250px;" role="alert">
        <%= error %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
         <span aria-hidden="true">&times;</span>
       </button>
     </div>
     <% } %>