<% layout("layouts/boilerplate.ejs") %> 
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Data Sumber</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Data Sumber</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <%- include("../partials/tambahsumber") %> 
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="program" class="table table-bordered table-hover">
                  <thead>
                  <tr>
                    <th>Sumber</th>
                    <th>Aksi</th>
                  </tr>
                  </thead>
                  <tbody>
                    <% for (s of sumber) {%>
                        <tr>
                            <td><%= s.nama %></td>
                            <td>
                              <a href="/sumber/<%= s._id %>/edit" class="btn btn-info btn-sm">Edit</a>
                            </td>
                        </tr>
                    <% } %>  
                  </tbody>
                  <tfoot>
                  <tr>
                    <th>Sumber</th>
                    <th>Aksi</th>
                  </tr>
                  </tfoot>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->