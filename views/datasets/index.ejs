<% layout("layouts/boilerplate.ejs") %> 
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Data Leads</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Data Leads</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <%- include("../partials/tambahdata") %> 
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <h5>Filter Data Leads</h5>
                <form class="mb-5">
                  <div class="form-row">
                    <div class="col" id="filter_col4" data-column="4">
                      <label for="col4_filter">Program</label>
                      <select class="form-control column_filter" id="col4_filter">
                        <option value="">Pilih Program...</option>
                        <% for (let p of program) {%>
                          <option value="<%= p.nama %>"><%= p.nama %></option>
                        <% } %>  
                      </select>
                    </div>
                    <div class="col" id="filter_col5" data-column="5">
                      <label for="col5_filter">Batch</label>
                      <select class="form-control column_filter" id="col5_filter">
                        <option value="">Pilih Batch...</option>
                        <% for (let i = 1; i < 100; i++) {%>
                          <option value="<%= i %>"><%= i %></option>
                        <% } %>  
                      </select>
                    </div>
                    <div class="col" id="filter_col8" data-column="8">
                      <label for="col9_filter">Status</label>
                      <select class="form-control column_filter" id="col8_filter">
                        <option value="">Pilih Status...</option>
                        <% for (let s of status) {%>
                          <option value="<%= s.nama %>"><%= s.nama %></option>
                        <% } %>  
                      </select>
                    </div>
                    <div class="col">
                      <label for="min">Tanggal Awal</label>
                      <input class="form-control" type="text" id="min">
                    </div>
                    <div class="col">
                      <label for="max">Tanggal Akhir</label>
                      <input class="form-control" type="text" id="max">
                    </div>
                    <div class="col">
                      <label for="resetBtn">Reset Filter</label>
                      <button type="button" class="form-control btn btn-danger" id="resetBtn">Reset</button>
                    </div>
                  </div>
                </form>

                <!-- <table border="0" class="mb-5" cellspacing="5" cellpadding="5">
                  <h4>Cari Berdasarkan Tanggal</h4>
                  <tbody>
                    <tr>
                      <td>Tanggal Awal:</td>
                      <td><input type="text" id="min" name="min"></td>
                    </tr>
                    <tr>
                      <td>Tanggal Akhir:</td>
                      <td><input type="text" id="max" name="max"></td>
                    </tr>
                  </tbody>
                </table> -->

                

                <table id="example1" class="table table-striped table-bordered nowrap" style="width: 100%;">
                  <thead>
                  <tr>
                    <!-- <th>No.</th> -->
                    <th>Nama</th>
                    <th>Gender</th>
                    <th>Email</th>
                    <th>Handphone</th>
                    <th>Program</th>
                    <th>Batch</th>
                    <th>Perusahaan</th>
                    <th>Jabatan</th>
                    <th>Status</th>
                    <th>Tanggal Input</th>
                    <th>Atur Jadwal</th>
                    <th>Concern</th>
                    <th>Sumber</th>
                    <th></th>
                  </tr>
                  </thead>
                  <tbody>
                    <% for (dataset of datasets) {%>
                        <tr>
                            <!-- <td></td> -->
                            <td><%= dataset.nama %></td>
                            <td><%= dataset.gender %></td>
                            <td><%= dataset.email %></td>
                            <td><%= dataset.handphone %></td>
                            <td><%= dataset.program %></td>
                            <td><%= dataset.batch %></td>
                            <td><%= dataset.perusahaan %></td>
                            <td><%= dataset.jabatan %></td>
                            <td><%= dataset.status %></td>
                            <td><%= moment(dataset.tglInput).format("YYYY-MM-DD") %></td>
                            <% if (dataset.status === "Refollow Up"){%>
                              <% if (dataset.tglRefollowUp) {%>
                                <td><%= moment(dataset.tglRefollowUp).format("YYYY-MM-DD") %></td>
                              <% } else if (!dataset.tglRefollowUp) { %>
                                <td><a href="/datasets/<%= dataset._id %>/aturjadwal">Atur Jadwal</a></td>
                              <% } else {%>
                                <td></td>
                              <% } %>    
                            <% } else  {%>
                              <td></td>
                            <% } %>  
                            <td><%= dataset.concern %></td>
                            <td><%= dataset.sumber %></td>
                            <td>
                              <a href="/datasets/<%= dataset._id %>/edit" class="btn btn-info btn-sm">Edit</a>
                            </td>
                        </tr>
                    <% } %>  
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  