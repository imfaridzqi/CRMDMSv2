<% layout("layouts/boilerplate.ejs") %>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Dashboard</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active">Dashboard</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-3 col-6">
          <!-- small box -->
          <div class="small-box bg-success">
            <div class="inner">
              <h3><%= totalLeads %></h3>

              <p>Jumlah Leads</p>
            </div>
            <div class="icon">
              <i class="ion ion-ios-people"></i>
            </div>
          </div>
        </div>
        <!-- ./col -->

        <div class="col-lg-3 col-6">
          <!-- small box -->
          <div class="small-box bg-info">
            <div class="inner">
              <h3><%= totalClosingLeads %></h3>

              <p>Total Closing Leads</p>
            </div>
            <div class="icon">
              <i class="ion ion-ios-checkmark"></i>
            </div>
          </div>
        </div>
        <!-- ./col -->

        <div class="col-12 col-sm-6 col-md-3">
          <!-- /.info-box -->
        </div>
        <!-- /.col -->

        <!-- fix for small devices only -->
        <div class="clearfix hidden-md-up"></div>

        <!-- /.col -->
        <div class="col-12 col-sm-6 col-md-3">
          <!-- /.info-box -->
        </div>
        <!-- /.col -->
      </div>
      <div class="row">
        <div class="col-7" style="padding-right: 5px !important">
          <div class="card card-info">
            <div class="card-header">
              <h3 class="card-title">
                <%= programCari %> <%= batch %> <%= tahun %>
              </h3>
              <div class="card-tools">
                <button
                  type="button"
                  class="btn btn-tool"
                  data-card-widget="collapse"
                >
                  <i class="fas fa-minus"></i>
                </button>
                <button
                  type="button"
                  class="btn btn-tool"
                  data-card-widget="remove"
                >
                  <i class="fas fa-times"></i>
                </button>
              </div>
            </div>
            <div class="card-body">
              <form class="mb-5" action="/dashboard/?_method=GET" method="POST">
                <div class="form-row">
                  <div class="col">
                    <label for="program">Program</label>
                    <select
                      class="form-control"
                      name="namaProgram"
                      id="program"
                    >
                      <option value="">Pilih Program...</option>
                      <% for (p of program) {%>
                      <option value="<%= p.nama %>"><%= p.nama %></option>
                      <% } %>
                    </select>
                  </div>

                  <div class="col">
                    <label for="batch">Batch</label>
                    <select class="form-control" name="batch" id="batch">
                      <option value="">Pilih Batch...</option>
                      <% for (let i = 1; i <= 100; i++) {%>
                      <option value="<%= i %>"><%= i %></option>
                      <% } %>
                    </select>
                  </div>

                  <div class="col">
                    <label for="tahun">Tahun</label>
                    <select class="form-control" name="tahun" id="tahun">
                      <option value="">Pilih Tahun...</option>
                      <% for (let i = new Date().getFullYear(); i >= 2017; --i){%>
                      <option value="<%= i %>"><%= i %></option>
                      <% } %>
                    </select>
                  </div>

                  <div class="col">
                    <label for="resetBtn">Cari</label>
                    <button type="submit" class="form-control btn btn-primary">
                      Cari
                    </button>
                  </div>
                </div>
              </form>

              <div class="chart">
                <canvas
                  id="lineChart"
                  style="
                    min-height: 250px;
                    height: 250px;
                    max-height: 250px;
                    max-width: 100%;
                  "
                ></canvas>
              </div>
              <p class="text-muted">
                Total Data <%= programCari %> <%= batch %> <%= tahun %>: <%= totalData %> Data
              </p>
            </div>
            <div class="card-footer">
              <div class="row">
                <div class="col-sm-3 col-6">
                  <div class="description-block border-right">
                    <h5 class="description-header"><%= totalData %></h5>
                    <span class="description-text">TOTAL DATA</span>
                  </div>
                  <!-- /.description-block -->
                </div>
                <!-- /.col -->
                <div class="col-sm-3 col-6">
                  <div class="description-block border-right">
                    <h5 class="description-header"><%= highest %></h5>
                    <span class="description-text">HIGHEST</span>
                  </div>
                  <!-- /.description-block -->
                </div>
                <!-- /.col -->
                <div class="col-sm-3 col-6">
                  <div class="description-block border-right">
                    <h5 class="description-header"><%= lowest %></h5>
                    <span class="description-text">LOWEST</span>
                  </div>
                  <!-- /.description-block -->
                </div>
                <!-- /.col -->
                <div class="col-sm-3 col-6">
                  <div class="description-block">
                    <h5 class="description-header"></h5>
                  </div>
                  <!-- /.description-block -->
                </div>
              </div>
              <!-- /.row -->
            </div>
            <!-- /.card -->
          </div>

          <!-- /.col -->
        </div>

        <div class="col-5" style="padding-left: 5px !important">
          <div class="card card-info">
            <div class="card-header">
              <h3 class="card-title">Data Leads</h3>
              <div class="card-tools">
                <button
                  type="button"
                  class="btn btn-tool"
                  data-card-widget="collapse"
                >
                  <i class="fas fa-minus"></i>
                </button>
                <button
                  type="button"
                  class="btn btn-tool"
                  data-card-widget="remove"
                >
                  <i class="fas fa-times"></i>
                </button>
              </div>
            </div>
            <div class="card-body">
              <table class="table table-striped table-valign-middle">
                <thead>
                  <tr>
                    <th>Program</th>
                    <th>Total Leads</th>
                    <th>Closing Leads</th>
                  </tr>
                </thead>
                <tbody>
                  <% for (let p of program) {%>
                  <tr>
                    <td><%= p.nama %></td>
                    <% if (p.nama === "Sertifikasi Digital Marketing") {%>
                    <td><%= leadsSDM %></td>
                    <% } else if (p.nama === "Sertifikasi Social Media") { %>
                    <td><%= leadsSSM %></td>
                    <% } else if (p.nama === "Subsidi Social Media") {%>
                    <td><%= leadsSubsidiSM %></td>
                    <% } else if (p.nama === "Subsidi Digital Marketing") {%>
                    <td><%= leadsSubsidiDM %></td>
                    <% } else if (p.nama === "In House Training") {%>
                    <td><%= leadsInhouse %></td>
                    <% } else if (p.nama === "Human Resource Manager") {%>
                    <td><%= leadsHRM %></td>
                    <% } else { %>
                    <td>-</td>
                    <% } %> <% if (p.nama === "Sertifikasi Digital Marketing") { %>
                    <td><%= leadsClosingSDM %></td>
                    <% } else if (p.nama === "Sertifikasi Social Media") { %>
                    <td><%= leadsClosingSSM %></td>
                    <% } else if (p.nama === "Subsidi Social Media") { %>
                    <td><%= leadsClosingSubsidiSM %></td>
                    <% } else if(p.nama === "Subsidi Digital Marketing") {%>
                    <td><%= leadsClosingSubsidiDM %></td>
                    <% } else if (p.nama === "In House Training") {%>
                    <td><%= leadsClosingInhouse %></td>
                    <% } else if (p.nama === "Human Resource Manager") {%>
                    <td><%= leadsClosingHRM %></td>
                    <% } else { %>
                    <td>-</td>
                    <% } %>
                  </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
            <!-- /.card -->
          </div>

          <!-- /.col -->
        </div>

        <div class="col-12">
          <!-- Custom Tabs -->
          <div class="card">
            <div class="card-header">
              <h3 class="card-title">Closing Table</h3>
            </div>
            <div class="container p-5">
              <ul class="nav nav-tabs">
                <li class="nav-item">
                  <a
                    data-toggle="tab"
                    class="nav-link active"
                    href="#digitalmarketing"
                    >Sertifikasi Digital Marketing</a
                  >
                </li>
                <li class="nav-item">
                  <a data-toggle="tab" class="nav-link" href="#socialmedia"
                    >Sertifikasi Social Media</a
                  >
                </li>
                <li class="nav-item">
                  <a
                    data-toggle="tab"
                    class="nav-link"
                    href="#humanresourcemanager"
                    >Human Resource Manager</a
                  >
                </li>
                <li class="nav-item">
                  <a data-toggle="tab" class="nav-link" href="#inhouse"
                    >In House Training</a
                  >
                </li>
              </ul>

              <form class="mb-3 mt-3">
                <div class="form-row">
                  <div class="col" id="filter_col5" data-column="5">
                    <label for="col5_filter">Batch</label>
                    <select class="form-control column_filter" id="col5_filter">
                      <option value="">Pilih Batch...</option>
                      <% for (let i = 1; i <= 100; i++) {%>
                      <option value="<%= i %>"><%= i %></option>
                      <% } %>
                    </select>
                  </div>

                  <div class="col" style="display: none">
                    <input type="hidden" id="min" />
                  </div>
                  <div class="col" style="display: none">
                    <input type="hidden" id="max" />
                  </div>
                  <div class="col"></div>
                  <div class="col"></div>
                  <div class="col">
                    <label for="resetBtn">Reset Filter</label>
                    <button
                      type="button"
                      class="form-control btn btn-danger"
                      id="resetBtn"
                    >
                      Reset
                    </button>
                  </div>
                </div>
              </form>

              <!-- Tab panes -->
              <div class="tab-content">
                <div class="tab-pane active py-3" id="digitalmarketing">
                  <%- include("../partials/closingTableSDM.ejs") %>
                </div>
                <div class="tab-pane fade py-3" id="socialmedia">
                  <%- include("../partials/closingTableSSM.ejs") %>
                </div>
                <div class="tab-pane fade py-3" id="humanresourcemanager">
                  <%- include("../partials/closingTableHRM.ejs") %>
                </div>
                <div class="tab-pane fade py-3" id="inhouse">
                  <%- include("../partials/closingTableInhouse.ejs") %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
  const ctx = document.getElementById("lineChart");

  const jan = "<%= janLength %>";
  const feb = "<%= febLength %>";
  const mar = "<%= marLength %>";
  const apr = "<%= aprLength %>";
  const may = "<%= mayLength %>";
  const jun = "<%= junLength %>";
  const jul = "<%= julLength %>";
  const aug = "<%= augLength %>";
  const sep = "<%= sepLength %>";
  const oct = "<%= octLength %>";
  const nov = "<%= novLength %>";
  const dec = "<%= decLength %>";
  const namaProgram = "<%= programCari %> <%= batch %> (<%= tahun %>)";

  new Chart(ctx, {
    data: {
      datasets: [
        {
          type: "line",
          label: namaProgram,
          data: [jan, feb, mar, apr, may, jun, jul, aug, sep, oct, nov, dec],
          tension: 0.1,
          borderColor: "rgb(75, 192, 192)",
        },
        {
          type: "bar",
          label: namaProgram,
          data: [jan, feb, mar, apr, may, jun, jul, aug, sep, oct, nov, dec],
          backgroundColor: "#B4CDE6",
        },
      ],
      labels: [
        "January",
        "February",
        "March",
        "April",
        "May",
        "June",
        "July",
        "August",
        "September",
        "October",
        "November",
        "December",
      ],
    },
    options: {
      scales: {
        y: {
          beginAtZero: true,
        },
      },
      responsive: true,
    },
  });
</script>
