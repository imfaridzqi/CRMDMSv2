<% layout("layouts/boilerplate.ejs") %> 

 <!-- Content Wrapper. Contains page content -->
 <div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Edit Concern</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active">Edit Concern</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <!-- left column -->
        <div class="col-md-12">
          <!-- general form elements -->
          <div class="card">
            <div class="card-header">
                <%- include("../partials/hapusconcern") %> 
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/concern/<%= concern._id %>?_method=PUT" method="POST" class="needs-validation" novalidate>
              <div class="card-body">
                <div class="card-body">

                  <!-- Nama -->
                  <div class="form-group">
                    <label for="nama">Nama Concern</label>
                    <input type="text" class="form-control" id="nama" name="concern[nama]" placeholder="Masukkan Nama" value="<%= concern.nama %>" required>
                    <div class="invalid-feedback">
                      Kolom ini harus diisi.
                    </div>
                  </div>

              </div>
              <!-- /.card-body -->
              <div class="card-footer">
                <a href="/concern" class="btn btn-danger">Batal</a>
                <button type="submit" class="btn btn-primary float-sm-right">Simpan</button>
              </div>
            </form>
          </div>
          <!-- /.card -->
        </div>
        <!--/.col (left) -->
      </div>
      <!-- /.row -->
    </div><!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->